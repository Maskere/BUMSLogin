@page
@model BUMS.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}
<div>
    <hr />
    <form method="post">
        <dl class="row">

            <dt class="col-sm-2">  @Html.DisplayNameFor(model => model.user.UserID)   </dt>
            <dd class="col-sm-10">  @Model.user.UserID  </dd>
            <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.user.UserName)  </dt>
            <dd class="col-sm-10">  @Model.user.UserName  </dd>
        </dl>
        <input type="hidden" asp-for="user.UserID" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
</div>