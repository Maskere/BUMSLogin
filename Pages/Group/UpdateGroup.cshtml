@page
@model BUMS.UpdateGroupModel
@{
    ViewData["Title"] = "Update Group";
}
<h3>Update Group</h3>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Group.GroupID" class="control-label">Group ID</label>
        <input asp-for="@Model.Group.GroupID" class="form-control" readonly />
        <span asp-validation-for="@Model.Group.GroupID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Group.GroupName" class="control-label">Group Name</label>
        <input asp-for="@Model.Group.GroupName" class="form-control" />
        <span asp-validation-for="@Model.Group.GroupName" class="text-danger"></span>
    </div>
    <p></p>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
    <div>
        <a asp-page="GetUser">Back to Groups</a>
    </div>
</form>
