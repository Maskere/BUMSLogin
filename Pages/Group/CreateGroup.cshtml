@page
@model BUMS.CreateGroupModel
@{
    ViewData["Title"] = "Create Group";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Group.GroupName" class="control-label"></label>
                <input asp-for="@Model.Group.GroupName" class="form-control" />
                <span asp-validation-for="@Model.Group.GroupName" class="text-danger"></span>
            </div>            
            <p></p>
            <div class="form-group">
                <label asp-for="@Model.Group.AccessType" class="control-label">Access type</label>
                <select asp-for="@Model.Group.AccessType" asp-items="@Html.GetEnumSelectList<AccessType>()">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="@Model.Group.AccessType" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
